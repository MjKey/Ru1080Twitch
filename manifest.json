{
    "manifest_version": 3,
    "name": "Ru1080Twitch",
    "description": "Разблокировка качества 1080+ на Twitch для России.",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_title": "Ru1080Twitch: Включить/выключить прокси"
    },
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "proxy",
        "storage"
    ],
    "host_permissions": [
        "https://usher.ttvnw.net/*"
    ]
}